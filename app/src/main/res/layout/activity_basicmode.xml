<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".BasicmodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:background="#00D6CACA"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/levelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:text=" level "
            android:textColor="#000000"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:background="#00ECE8E8"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/right" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/chapter1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/chkbutton"
                android:text="chapter 1" />

            <Button
                android:id="@+id/chapter2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/chkbutton"
                android:text="chapter 2" />

            <Button
                android:id="@+id/chapter3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/chkbutton"
                android:text="chapter 3" />

            <Button
                android:id="@+id/chapter4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/chkbutton"
                android:text="chapter 4" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
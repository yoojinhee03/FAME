<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepeatSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cnt"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:gravity="center"
                android:text="요일을 선택해주세요."
                android:textColor="#020202"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/SunCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#037CEC"
                    android:gravity="center|right"
                    android:text="일요일"
                    android:textColor="#000000" />

                <CheckBox
                    android:buttonTint="#037CEC"
                    android:id="@+id/monCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="월요일"
                    android:textColor="#000000" />

                <CheckBox

                    android:buttonTint="#037CEC"
                    android:id="@+id/TuesCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="화요일"
                    android:textColor="#000000" />

                <CheckBox
                    android:buttonTint="#037CEC"
                    android:id="@+id/WedsCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="수요일"
                    android:textColor="#000000" />

                <CheckBox
                    android:buttonTint="#037CEC"
                    android:id="@+id/ThursCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="목요일"
                    android:textColor="#000000" />

                <CheckBox
                    android:buttonTint="#037CEC"
                    android:id="@+id/FriCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="금요일"
                    android:textColor="#000000" />

                <CheckBox
                    android:buttonTint="#037CEC"
                    android:id="@+id/SaturCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="토요일"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/chkbutton"
                    android:text="완료"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>